#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
	long t,i;
	cin>>t;
	long ar[t];
	for (i=0;i<t;i++) {
	    /* code */cin>>ar[i];
	}
    long ans=0,maxr = 0;
    sort(ar,ar+t);
    for (i=0;i<t;i++) {
        /* code */maxr=(t-i)*ar[i];
        ans = max(maxr,ans);
    }
    cout<<ans<<endl;
	return 0;
}
